<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhiteFragmentTutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gothaproreg"
        android:lineHeight="20dp"
        android:text="Новый раздел позволяет фиксировать свои\nзадачи и задания:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/fragment_two_one"
        app:layout_constraintBottom_toBottomOf="@+id/four_image_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/four_image_fragment"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_marginStart="100dp"
        android:layout_height="436dp"
        android:layout_marginBottom="47dp"
        android:src="@drawable/fragment_two_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>